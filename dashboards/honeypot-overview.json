{
  "annotations": {
    "list": []
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "title": "Attack Attempts Over Time",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 0 },
      "datasource": { "type": "loki", "uid": "" },
      "targets": [
        {
          "expr": "sum(count_over_time({job=~\"cowrie|opencanary\"} [5m])) by (job)",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 20,
            "pointSize": 5
          }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "multi" }
      }
    },
    {
      "title": "Top Attacker IPs",
      "type": "table",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "datasource": { "type": "loki", "uid": "" },
      "targets": [
        {
          "expr": "topk(20, sum by (src_ip) (count_over_time({job=\"cowrie\"} | json | src_ip != \"\" [$__range])))",
          "refId": "A",
          "instant": true
        }
      ],
      "transformations": [
        {
          "id": "sortBy",
          "options": { "fields": {}, "sort": [{ "field": "Value", "desc": true }] }
        }
      ],
      "fieldConfig": {
        "defaults": {},
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "src_ip" },
            "properties": [{ "id": "displayName", "value": "Source IP" }]
          },
          {
            "matcher": { "id": "byName", "options": "Value" },
            "properties": [{ "id": "displayName", "value": "Attempts" }]
          }
        ]
      }
    },
    {
      "title": "Top Targeted Ports",
      "type": "barchart",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "datasource": { "type": "loki", "uid": "" },
      "targets": [
        {
          "expr": "topk(10, sum by (dst_port) (count_over_time({job=~\"cowrie|opencanary\"} | json | dst_port != \"\" [$__range])))",
          "refId": "A",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "fillOpacity": 80
          }
        },
        "overrides": []
      },
      "options": {
        "orientation": "horizontal",
        "legend": { "displayMode": "hidden" }
      }
    },
    {
      "title": "Cowrie Command Log",
      "type": "logs",
      "gridPos": { "h": 10, "w": 14, "x": 0, "y": 16 },
      "datasource": { "type": "loki", "uid": "" },
      "targets": [
        {
          "expr": "{job=\"cowrie\"} | json | eventid = \"cowrie.command.input\"",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "sortOrder": "Descending",
        "enableLogDetails": true,
        "wrapLogMessage": true
      }
    },
    {
      "title": "Protocol Breakdown",
      "type": "piechart",
      "gridPos": { "h": 10, "w": 10, "x": 14, "y": 16 },
      "datasource": { "type": "loki", "uid": "" },
      "targets": [
        {
          "expr": "sum by (dst_port) (count_over_time({job=~\"cowrie|opencanary\"} | json | dst_port != \"\" [$__range]))",
          "refId": "A",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {},
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "right", "values": ["percent", "value"] },
        "pieType": "donut",
        "reduceOptions": { "calcs": ["lastNotNull"] }
      }
    }
  ],
  "schemaVersion": 38,
  "style": "dark",
  "tags": ["honeypot"],
  "templating": { "list": [] },
  "time": { "from": "now-24h", "to": "now" },
  "timepicker": {},
  "timezone": "browser",
  "title": "Honeypot Overview",
  "uid": "honeypot-overview",
  "version": 1
}
